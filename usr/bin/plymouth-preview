#!/bin/bash

if [ ! $( id -u ) -eq 0 ]; then
  echo "Run as root (not sudo)"
  exit
fi

echo "Preview your plymouth settings (duration: 10 seconds)"
read -e -p "Continue? [y/n] (default=n): " ANSWER
case $ANSWER in
  y|Y|yes|YES|Yes)
    plymouthd; plymouth --show-splash ; for ((I=0; I<10; I++)); do plymouth --update=test$I ; sleep 1; done; plymouth quit
    ;;
esac
